generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  phone     String?
  password  String?   // Hashed password
  role      Role     @default(LEAD)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Auth & Recovery
  resetToken       String?   @unique
  resetTokenExpiry DateTime?

  // Phase 1: Control
  state             LeadState @default(NEW)
  automationEnabled Boolean   @default(true)
  humanRequired     Boolean   @default(false)
  
  leadLogs          LeadLog[]
  assessments       Assessment[]
  applications      Application[]
  payments          Payment[]
}

enum Role {
  LEAD
  ADMIN
  STUDENT
}

enum LeadState {
  NEW
  ASSESSMENT_COMPLETED
  NURTURING
  ONLINE_CLIENT
  APPLIED_PHYSICAL
  ACCEPTED
  CLIENT
}

model LeadLog {
  id            String    @id @default(uuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  previousState LeadState
  newState      LeadState
  reason        String?
  createdAt     DateTime  @default(now())
}

model MentorshipVideo {
  id          String    @id @default(uuid())
  title       String
  description String?   @db.Text
  url         String    // YouTube/Vimeo embed URL or Local
  thumbnail   String?
  minState    LeadState @default(CLIENT) // Minimum state required to view
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model MessageTemplate {
  id           String     @id @default(uuid())
  name         String     @unique
  content      String     @db.Text
  variables    Json?      // ["first_name", "program_name"]
  isActive     Boolean    @default(true)
  triggerState LeadState? // Which state triggers this?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Assessment {
  id        String   @id @default(uuid())
  score     Int
  answers   Json
  result    String   // Category/Result
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Application {
  id        String   @id @default(uuid())
  program   String   // "Group Intensive", "Private", etc.
  status    AppStatus @default(PENDING)
  details   Json     // Form data
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  // Phase 2: Revenue Logic
  score        AppScore  @default(UNSCORED)
  scoreDetails Json?     // Breakdown of scoring
  paymentLink  String?
  paymentExpiresAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum AppStatus {
  PENDING
  APPROVED
  REJECTED
  WAITLIST
}

enum AppScore {
  UNSCORED
  WEAK
  MODERATE
  STRONG
}

model Payment {
  id            String        @id @default(uuid())
  amount        Float
  currency      String        @default("NGN")
  reference     String        @unique
  status        PaymentStatus @default(PENDING)
  provider      String        @default("PAYSTACK")
  
  userId        String
  user          User          @relation(fields: [userId], references: [id])
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}
